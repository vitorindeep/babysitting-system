@page
@model EditProfile
@{
    ViewData["Title"] = "Editar Perfil";
}

@if (User.IsInRole("Client"))
{

    <h4>Editar perfil</h4>
    <hr />

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="well">

                <form asp-page-handler="UpdateClientAccount" asp-page="EditProfile" method="post" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()

                    <section>

                        <div class="form-group">
                            @Html.LabelFor(m => m.NameModel, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.NameModel, new { @class = "form-control", @Value = Model.NameModel })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ContactModel, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.ContactModel, new { @class = "form-control", @type = "number", @Value = Model.ContactModel })
                        </div>

                        <div class="form-group">
                            <label asp-for="AvatarModel"></label>
                            <input type="file" asp-for="AvatarModel" />
                        </div>

                        @Html.ValidationSummary(false)

                        <div class="form-group">
                            <input type="submit" value="Editar" class="btn btn-default pull-right" />
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
}

