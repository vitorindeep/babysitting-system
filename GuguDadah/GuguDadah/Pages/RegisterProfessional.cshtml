@page
@model RegisterProfessional
@{
    ViewData["Title"] = "Registo de Profissional";
}

<h4>Registar Profissional</h4>
<hr />

<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="well">
            <form asp-page-handler="CreateAccount" asp-page="RegisterProfessional" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <section>

                    <div class="form-group col-centered">
                        @Html.LabelFor(m => m.Professional.UserName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Professional.UserName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Professional.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Professional.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Professional.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Professional.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Professional.Contact, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Professional.Contact, new { @class = "form-control", @type = "number" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Professional.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Professional.Password, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Professional.Shift, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Professional.Shift, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Professional.Presentation, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Professional.Presentation, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label asp-for="Avatar"></label>
                        <input type="file" asp-for="Avatar" />
                    </div>

                    @Html.ValidationSummary(false)

                    <div class="form-group">
                        <input type="submit" value="Registar" class="btn btn-default pull-right" />
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>