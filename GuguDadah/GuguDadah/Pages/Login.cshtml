@page
@model GuguDadah.Pages.Login
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-sm-6 mainContentWrapper">
        <div class="well">
            <form asp-page-handler="LoginUser" method="post">
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input type="checkbox" asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>

                @Html.ValidationSummary(false)

                <div class="form-group">
                    <input type="submit" value="Iniciar Sessão" class="btn btn-default" />
                </div>
            </form>

        </div>
    </div>

</div>